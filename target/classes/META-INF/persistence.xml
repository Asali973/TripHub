<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://xmlns.jcp.org/xml/ns/persistence
        http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

	<!-- Unité de persistance : 1 unité par BDD (en mode ressources locale) -->
	<persistence-unit name="triphub"
		transaction-type="RESOURCE_LOCAL">
		<!-- <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider> -->
		<class>triphub.entity.user.User</class>
		<class>triphub.entity.user.Customer</class>
		<class>triphub.entity.user.Provider</class>
		<class>triphub.entity.user.Organizer</class>
		<class>triphub.entity.user.SuperAdmin</class>
		<class>triphub.entity.util.Address</class>
		<class>triphub.entity.util.Administration</class>
		<class>triphub.entity.util.CompanyInfo</class>
		<class>triphub.entity.util.Date</class>
		<class>triphub.entity.util.FinanceInfo</class>
		<class>triphub.entity.util.Picture</class>
		<class>triphub.entity.util.PictureType</class>
		<class>triphub.entity.product.Product</class>
		<class>triphub.entity.subscription.Subscription</class>
		<!-- <class>triphub.entity.user.User</class> -->
		<!-- Liste des propriétés de JPA et Hibernate pour la Gestion de la BDD -->
		<properties>

			<!-- Pilote JDBC adapté à MySQL -->
			<property name="javax.persistence.jdbc.driver"
				value="com.mysql.cj.jdbc.Driver" />

			<!-- URL de connexion -->
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/triphub?createDatabaseIfNotExist=true&amp;useUnicode=true&amp;serverTimezone=Europe/Paris" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="twitwiboo" />	
			<!-- Propriétés hibernate : dialect de la BDD, création du schéma, traces de dev etc ... -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" />

		</properties>
	</persistence-unit>
</persistence>
