<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.1"
   xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="
        http://xmlns.jcp.org/xml/ns/persistence
        http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
   
   <!-- Unité de persistance : 1 unité par BDD (en mode ressources locale) -->
	<persistence-unit name="triphub" transaction-type="RESOURCE_LOCAL">
		
		<!-- Liste des propriétés de JPA et Hibernate pour la Gestion de la BDD -->
		<properties>
			
			<!-- Pilote JDBC adapté à MySQL -->
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
			
			<!-- URL de connexion -->
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/triphub?createDatabaseIfNotExist=true&amp;useUnicode=true&amp;serverTimezone=Europe/Paris" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="twitwiboo" />
	
			<!-- Propriétés hibernate : dialect de la BDD, création du schéma, traces de dev etc ... -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.show_sql" value="false" />
			
		</properties>
	</persistence-unit>
</persistence>
