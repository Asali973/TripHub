<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2"
		xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
	<navigation-rule>
		<from-view-id>/views/loginAndAccount/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/views/home.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
 <!-- Navigation rules for different user types -->
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>/views/customer_home</from-outcome>
            <to-view-id>/views/customer_home.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>/views/organizer_home</from-outcome>
            <to-view-id>/views/organizer_home.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>/views/provider_home</from-outcome>
            <to-view-id>/views/provider_home.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>/views/superadmin_home</from-outcome>
            <to-view-id>/views/superadmin_home.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
<navigation-rule>
    <from-view-id>/views/organizer_session/packages.xhtml</from-view-id>
    <navigation-case>
        <from-outcome>details</from-outcome>
        <to-view-id>/details.xhtml</to-view-id>
    </navigation-case>
</navigation-rule>
<navigation-rule>
    <from-view-id>*</from-view-id>
    <navigation-case>
        <from-outcome>tourPackages</from-outcome>
        <to-view-id>/views/product/TourpackageHome.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
        <from-outcome>tourPackages</from-outcome>
        <to-view-id>/views/organizer_session/packages.xhtml</to-view-id>
    </navigation-case>
</navigation-rule>
<navigation-rule>
    <from-view-id>/views/organizer_session/details.xhtml</from-view-id>
    <navigation-case>
        <from-outcome>cart</from-outcome>
        <to-view-id>/views/organizer_session/cart.xhtml</to-view-id>
        <redirect />
    </navigation-case>
</navigation-rule>
	<application />
</faces-config>